---
// src/layouts/BaseLayout.astro
import Header from '../components/common/Header.astro';
import Footer from '../components/common/Footer.astro'; // <-- CRITICAL IMPORT
import '../styles/global.css';

const { title } = Astro.props;
---
<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>{title} | Roman Street</title>
	
	<link rel="preconnect" href="https://fonts.googleapis.com">
	<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
	<link 
		href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&family=Playfair+Display:ital,wght@0,400..900;1,400..900&display=swap" 
		rel="stylesheet"
	>

	<link rel="stylesheet" href="/src/styles/global.css">
</head>
<body>
	<Header />
	<main>
		<slot /> </main>
	<Footer />
</body>
</html>